{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window", "deno.worker"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "eqeqeq",
        "explicit-module-boundary-types",
        "no-console",
        "no-debugger",
        "no-eval",
        "no-implicit-any",
        "no-implicit-returns",
        "no-non-null-asserted-optional-chain",
        "no-sparse-arrays",
        "no-undef",
        "no-unreachable",
        "no-var",
        "prefer-const",
        "prefer-template",
        "require-await",
        "single-attribute-per-line",
        "strict-null-check",
        "triple-slash-reference",
        "use-enum"
      ]
    },
    "exclude": [
      "node_modules/**",
      ".git/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules/**",
      ".git/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ]
  },
  "imports": {
    "std/": "https://deno.land/std@0.200.0/",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.7",
    "@google/generative-ai": "https://esm.sh/@google/generative-ai@0.1.1",
    "crypto-js": "https://esm.sh/crypto-js@4.2.0"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt --check",
    "type-check": "deno check"
  }
}
